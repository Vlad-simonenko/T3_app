generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://nestAuth:nestAuth@localhost:5432/nestAuth?schema=public"
}

model User {
  id       Int        @id @default(autoincrement())
  email    String     @unique
  name     String?
  tasks    Task[]
  Subtasks Subtasks[]
}

model Subtasks {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id])
  Task      Task?   @relation(fields: [taskId], references: [id])
  taskId    Int?
}

model Task {
  id        Int        @id @default(autoincrement())
  title     String
  content   String?
  published Boolean    @default(false)
  authorId  Int
  author    User       @relation(fields: [authorId], references: [id])
  Subtasks  Subtasks[]
}
